#include<bits/stdc++.h>
using namespace std;
int main(){
	float p,r,t,SimpleInterest,CompoundInterest;
	cout<<"enter tne value of p,r,t\n";
	cin>>p>>r>>t;
	cout<<"SimpleInterest=";
	SimpleInterest=(p*r*t)/100;
	cout<<SimpleInterest<<endl;
	CompoundInterest=p*pow((1+r/100),t);
	cout<<"CompoundInterest=";
	cout<<CompoundInterest<<endl;
	
	return 0;
}
